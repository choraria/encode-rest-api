{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "https://documenter.getpostman.com/view/11693151/SzzehfqA",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "api"
      }
    ]
  }
}